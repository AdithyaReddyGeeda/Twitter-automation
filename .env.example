# X (Twitter) API v2 - Requires Elevated access for user timeline
# Get keys at https://developer.twitter.com/en/portal/dashboard
X_API_KEY=your_api_key
X_API_SECRET=your_api_secret
X_ACCESS_TOKEN=your_access_token
X_ACCESS_TOKEN_SECRET=your_access_token_secret
X_BEARER_TOKEN=your_bearer_token

# AI: openai | anthropic | ollama (local, no key)
AI_PROVIDER=ollama
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
# Ollama (local): install from https://ollama.com, run "ollama serve" and "ollama pull llama3.2"
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Target X handle to analyze and post as (without @)
X_HANDLE=mcisaul_

# Optional: delay range (min, max) in seconds between automated actions (human-like)
MIN_DELAY_SEC=30
MAX_DELAY_SEC=120

# Autonomous posting safeguards (no input required, but careful)
MAX_POSTS_PER_DAY=5
ENABLE_SAFETY_CHECK=true
# Blocklist: comma-separated words/phrases that will block a tweet if present (case-insensitive)
# BLOCKLIST=spam,badword
